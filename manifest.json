{
  "name": "RandPlay Bookmark",
  "version": "1.0",
  "description": "randomly play your bookmark",
  "permissions": [
    "tabs",
    "bookmarks",
    "webNavigation",
    "chrome://favicon/",
    "https://www.nicovideo.jp/*",
    "https://www.youtube.com/*"
  ],
  "background": {
    "page":"background.html",
    "persistent": true
  },
  "web_accessible_resources": [
    "randomplay.js",
    "youtube_controller.js",
    "folder_option.js"
 ],
  "browser_action": {},
  "manifest_version": 2,
  "options_page": "folder_option.html",
  "icons": { 
    "16": "./assets/favicon-16.png",
    "48": "./assets/favicon-48.png",
   "128": "./assets/favicon-128.png" 
  }
}